<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".child">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:text="Enter details here"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/intro"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/intro"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="65dp"
        android:textColor="@color/white"
        android:hint="Enter name"
        android:textColorHint="@color/white"
        android:id="@+id/name"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginHorizontal="45dp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:hint="Enter gender"
        android:textColorHint="@color/white"
        android:id="@+id/gender"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/gender"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="15dp"
        android:hint="Enter age"
        android:textColorHint="@color/white"
        android:id="@+id/age"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@id/face"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:text="search"
        android:id="@+id/searchBtn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@id/face"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        android:text="view"
        android:id="@+id/viewBtn"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_person_search_24"
        android:layout_marginLeft="12dp"
        android:background="#e85d04"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/searchIcon"
        app:layout_constraintBottom_toTopOf="@id/searchBtn" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_preview_24"
        android:layout_marginRight="12dp"
        android:background="#e85d04"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/viewIcon"
        app:layout_constraintBottom_toTopOf="@id/searchBtn" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="10dp"
        android:text="Search With AI Face Recognize"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/face"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>