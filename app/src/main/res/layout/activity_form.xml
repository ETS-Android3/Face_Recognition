<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form"
    tools:context=".form">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Name :"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:id="@+id/name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:text="Email ID :"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:id="@+id/email"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:text="Phone :"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:id="@+id/phone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:text="Location :"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:id="@+id/Location"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/name"
        android:hint="Enter your Name"
        android:textSize="22dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="185dp"
        android:textColor="@color/black"
        android:id="@+id/nameEntry"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameEntry"
        app:layout_constraintLeft_toRightOf="@id/name"
        android:hint="Enter your Email"
        android:textSize="22dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:textColor="@color/black"
        android:id="@+id/emailEntry"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emailEntry"
        app:layout_constraintLeft_toRightOf="@id/phone"
        android:hint="Enter your Phone Number"
        android:textSize="22dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="22dp"
        android:textColor="@color/black"
        android:id="@+id/phoneEntry"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phoneEntry"
        app:layout_constraintLeft_toRightOf="@id/Location"
        android:hint="Enter your Phone Number"
        android:textSize="22dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="39dp"
        android:textColor="@color/black"
        android:id="@+id/LocationEntry"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg"
        android:textSize="20sp"
        app:backgroundTint="#f48c06"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="70dp"
        android:text="Submit"
        android:id="@+id/SubmitButton"
        />





</androidx.constraintlayout.widget.ConstraintLayout>